            <Grid HorizontalAlignment="Right" VerticalAlignment="Top" 
                  Margin="0,0,0,0"
                  Visibility="{x:Bind Vm.ShowOrderBy, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
