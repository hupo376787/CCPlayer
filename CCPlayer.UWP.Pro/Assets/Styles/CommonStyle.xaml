<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="using:CCPlayer.UWP.Converters">

    <x:Double x:Key="FlyoutWidth">272</x:Double>
    <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converter:BooleanReverseConverter x:Key="BooleanReverseConverter" />

    <DataTemplate x:Key="ToggleSwitchHeaderTemplate">
        <TextBlock Text="{Binding}" 
                       TextWrapping="Wrap" 
                       FontSize="{StaticResource TextStyleMediumFontSize}"
                       Foreground="{ThemeResource ToggleSwitchHeaderForegroundThemeBrush}" />
    </DataTemplate>

    <Style x:Key="ToggleSwitchStyle" TargetType="ToggleSwitch">
        <Setter Property="Margin" Value="0,12"/>
        <Setter Property="FontSize" Value="{StaticResource TextStyleLargeFontSize}"/>
        <Setter Property="HeaderTemplate" Value="{StaticResource ToggleSwitchHeaderTemplate}" />
    </Style>

    <Style x:Key="ControlTextHeaderStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,6" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{ThemeResource ToggleSwitchHeaderForegroundThemeBrush}" />
        <Setter Property="FontSize" Value="{StaticResource TextStyleMediumFontSize}" />
    </Style>

    <Flyout x:Key="ConnectUNCFolderFlyout" Placement="Bottom">
        <StackPanel x:Name="ConnectUNCFolderFlyoutContent" MinWidth="{StaticResource FlyoutWidth}">
            <TextBox x:Name="UNCFolderPath"
                    x:Uid="Server/Address/UNC"
                    Margin="3"
                    Text="{Binding PrimaryContent, Mode=TwoWay}"
                    PlaceholderText="[서버 ex) \\server\share\]"
                    MaxLength="1000" />
            <Grid Margin="3" Visibility="{Binding ShowErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xEA39;" FontSize="16" FontWeight="Normal" 
                          Foreground="OrangeRed"
                          VerticalAlignment="Top" Margin="2"></FontIcon>
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="OrangeRed" 
                           TextWrapping="Wrap" Grid.Column="1" Margin="2,0,0,0" />
            </Grid>
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar x:Name="UNCFolderConnectingProgressBar" 
                             IsIndeterminate="True" 
                             Margin="0,0,3,0"
                             Visibility="{Binding IsProcessingPrimaryButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Grid.Column="1" 
                        x:Name="UNCFolderConnectButton"
                        x:Uid="Button/Connect"
                        Content="[연결]" 
                        IsEnabled="{Binding IsProcessingPrimaryButton, Converter={StaticResource BooleanReverseConverter}}"
                        HorizontalAlignment="Stretch"
                        Margin="3,0,0,0"
                        Command="{Binding PrimaryButtonCommand}"
                        CommandParameter="{Binding ElementName=UNCFolderPath}"
                        Background="{ThemeResource SystemControlBackgroundAccentBrush}" 
                        Foreground="{ThemeResource SystemControlForegroundAltHighBrush}"/>
            </Grid>
        </StackPanel>
    </Flyout>
    
    <Flyout x:Key="FtpConnectFlyout" Placement="Bottom">
        <StackPanel x:Name="ConnectServerFlyoutContent" Width="320" MinWidth="{StaticResource FlyoutWidth}">
            <TextBox x:Name="ServerUrl"
                    x:Uid="Server/Address/WebDAV"
                    Margin="3"
                    Text="{Binding Settings.Server.WebDAVUrl, Mode=TwoWay}"
                    PlaceholderText="서버 ex) http://my.server.com/webdav/"
                    MaxLength="1000" />
            <Grid Margin="3" Visibility="{Binding ShowErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xEA39;" FontSize="16" FontWeight="Normal" 
                                                  Foreground="OrangeRed"
                                                  VerticalAlignment="Top" Margin="2"></FontIcon>
                <TextBlock Text="{Binding ErrorMessage}" 
                                                   Foreground="OrangeRed" 
                                                   TextWrapping="Wrap" Grid.Column="1" Margin="2,0,0,0" />
            </Grid>
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="UserName"
                                                 x:Uid="Server/UserName/WebDAV"
                                                 Grid.Column="0"
                                                 Text="{Binding Settings.Server.WebDAVUserName, Mode=TwoWay}"
                                                 PlaceholderText="계정"
                                                 Margin="0,0,3,0"
                                                 MaxLength="50" />
                <PasswordBox x:Name="Password"
                                                     x:Uid="Server/Password/WebDAV"
                                                     Grid.Column="1"
                                                     Margin="3,0,0,0"
                                                     PlaceholderText="패스워드"
                                                     Password="{Binding Settings.Server.WebDAVPassword, Mode=TwoWay}"
                                                     MaxLength="50" />
            </Grid>
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar x:Name="ConnectingProgressBar" 
                                                     IsIndeterminate="True" 
                                                     Margin="0,0,3,0"
                                                     Visibility="Collapsed"/>
                <Button Grid.Column="1" 
                                                x:Name="AuthenticateButton"
                                                x:Uid="Button/Connect"
                                                Content="연결" 
                                                HorizontalAlignment="Stretch"
                                                Margin="3,0,0,0"
                                                Tapped="{Binding AuthenticationTapped}"
                                                Background="{ThemeResource SystemControlBackgroundAccentBrush}" 
                                                Foreground="{ThemeResource SystemControlForegroundAltHighBrush}"
                                                />
            </Grid>
        </StackPanel>
    </Flyout>

    <Flyout x:Key="PlayListFlyout" Placement="Right">
        <!-- x:Name="NewPlayListFlyoutContent"은 Flyout을 닫을때 사용-->
        <StackPanel x:Name="PlayListFlyoutContent" Width="{StaticResource FlyoutWidth}">
            <!--<TextBlock Text="재생 목록 이름 입력" Margin="3"/>-->
            <TextBlock Text="{Binding PrimaryTitle}" Margin="3"/>
            <TextBox x:Name="PlayListName"  
                     Text="{Binding PrimaryContent, Mode=TwoWay}"
                     PlaceholderText="{Binding SecondaryContent, Mode=TwoWay}"
                     Margin="3" MaxLength="50" />
            <Grid Margin="3" Visibility="{Binding ShowErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xEA39;" FontSize="16" FontWeight="Normal" 
                          Foreground="OrangeRed"
                          VerticalAlignment="Top" Margin="2"></FontIcon>
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="OrangeRed" 
                           TextWrapping="Wrap" Grid.Column="1" Margin="2,0,0,0" />
            </Grid>
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" 
                        Content="{Binding PrimaryButtonText}" 
                        HorizontalAlignment="Stretch"
                        Margin="3"
                        Background="{ThemeResource SystemControlBackgroundAccentBrush}" 
                        Foreground="{ThemeResource SystemControlForegroundAltHighBrush}"
                        Command="{Binding PrimaryButtonCommand}"
                        CommandParameter="{Binding ElementName=PlayListName}"/>
            </Grid>
        </StackPanel>
    </Flyout>

